<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skynet.common.dao.FileDao">

	<select id="get" resultType="com.skynet.common.bean.Esysfildef">
		select `id`,`type`,`url`,`create_user_id`,`create_time`,`update_user_id`,`update_time` from esysfildef where id = #{value}
	</select>

	<select id="list" resultType="com.skynet.common.bean.Esysfildef">
		select `id`,`type`,`url`,`create_user_id`,`create_time`,`update_user_id`,`update_time` from esysfildef
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="type != null and type != ''"> and type = #{type} </if>
		  		  <if test="url != null and url != ''"> and url = #{url} </if>
		  		  
		  		  <if test="createUserId != null and createDate != ''"> and create_user_id = #{createDate} </if>
		  		  <if test="createTime != null and createDate != ''"> and create_time = #{createDate} </if>
		  		  <if test="updateUserId != null and createDate != ''"> and update_user_id = #{createDate} </if>
		  		  <if test="updateTime != null and createDate != ''"> and update_time = #{createDate} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from esysfildef
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="type != null and type != ''"> and type = #{type} </if>
		  		  <if test="url != null and url != ''"> and url = #{url} </if>
		  		  <if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.skynet.common.bean.Esysfildef" useGeneratedKeys="true" keyProperty="id">
		insert into esysfildef
		(
			`type`, 
			`url`, 
			`create_date`
		)
		values
		(
			#{type}, 
			#{url}, 
			#{createDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.skynet.common.bean.Esysfildef">
		update sys_file 
		<set>
			<if test="type != null">`type` = #{type}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="createDate != null">`create_date` = #{createDate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from esysfildef where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from esysfildef where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>